<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight=".2"
                    android:src="@drawable/arrow_left_icon"
                    app:tint="@color/white" />
                <TextView
                    android:id="@+id/tv_header"
                    android:layout_width="0dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:text="   EMI Calculator"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />


                <ImageView
                    android:id="@+id/imgHome"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight=".2"
                    android:padding="5dp"
                    android:src="@drawable/ic_home"
                    app:tint="@color/white" />

            </LinearLayout>
        </RelativeLayout>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">


                            <ImageView
                                android:id="@+id/imemilogo"
                                android:layout_width="250dp"
                                android:layout_height="150dp"
                                android:visibility="gone"
                                android:layout_gravity="center_horizontal"/>
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bg_light_grey"
                                    android:orientation="vertical">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/txtv_emi"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="start"
                                            android:layout_marginTop="2dp"
                                            android:paddingLeft="10dp"
                                            android:text="Principal Amount : "
                                            android:textColor="@color/colorPrimaryExtraDark"
                                            android:textSize="15sp"
                                            android:textStyle="bold" />
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                                <EditText
                                                    android:id="@+id/tie_principal"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:inputType="number"
                                                    android:layout_marginLeft="10dp"
                                                    android:layout_marginRight="10dp"
                                                    android:drawablePadding="10dp"
                                                    android:textSize="15dp"
                                                    android:maxLength="13"
                                                    android:backgroundTint="@color/colorPrimary"/>



                                        </LinearLayout>
                                    </LinearLayout>
                                </RelativeLayout>
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bg_light_grey"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginTop="10dp"
                                    android:orientation="vertical">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/txtv_intrstrate"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="start"
                                            android:paddingLeft="10dp"
                                            android:text="Interest Rate : "
                                            android:textColor="@color/colorPrimaryExtraDark"
                                            android:textSize="15sp"
                                            android:textStyle="bold" />
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <EditText
                                                    android:id="@+id/tie_interest"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:inputType="text"
                                                    android:layout_marginLeft="10dp"
                                                    android:layout_marginRight="10dp"
                                                    android:textSize="15dp"
                                                    android:maxLength="13"
                                                    android:backgroundTint="@color/colorPrimary"/>


                                        </LinearLayout>
                                    </LinearLayout>
                                </RelativeLayout>
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/bg_light_grey"
                                    android:orientation="vertical">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/txtv_month"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="start"
                                            android:paddingLeft="10dp"
                                            android:text="Month : "
                                            android:textColor="@color/colorPrimaryExtraDark"
                                            android:textSize="15sp"
                                            android:textStyle="bold" />
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <EditText
                                                    android:id="@+id/tie_years"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:inputType="number"
                                                    android:layout_marginLeft="10dp"
                                                    android:layout_marginRight="10dp"
                                                    android:drawablePadding="10dp"
                                                    android:textSize="15dp"
                                                    android:maxLength="13"
                                                    android:backgroundTint="@color/colorPrimary"/>


                                        </LinearLayout>
                                    </LinearLayout>
                                </RelativeLayout>
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bg_light_grey"
                                    android:orientation="vertical"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginTop="10dp">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/txtv_type"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="start"
                                            android:paddingLeft="10dp"
                                            android:text="EMI Type : "
                                            android:textColor="@color/colorPrimaryExtraDark"
                                            android:textSize="15sp"
                                            android:textStyle="bold" />
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginRight="10dp"
                                            android:orientation="horizontal">
                                            <com.google.android.material.textfield.TextInputLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="40dp"
                                                android:layout_alignParentBottom="true"
                                                android:background="@android:color/transparent"
                                                android:textColorHint="@color/colorPrimary"
                                                app:hintTextColor="@color/colorPrimary">

                                                <com.google.android.material.textfield.TextInputEditText
                                                    android:id="@+id/tie_emi"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:background="@android:color/transparent"
                                                    android:clickable="true"
                                                    android:focusable="false"
                                                    android:hint=""
                                                    android:backgroundTint="@color/colorPrimary"
                                                    android:drawableRight="@drawable/ic_arrow_black"
                                                    android:textColorHint="@color/colorPrimary"
                                                    android:textSize="15dp" />

                                            </com.google.android.material.textfield.TextInputLayout>



                                        </LinearLayout>
                                    </LinearLayout>
                                </RelativeLayout>
                            <LinearLayout
                                android:id="@+id/llOutput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="10dp"
                                android:visibility="gone">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:background="@drawable/btn_bg5"
                                        android:orientation="vertical"
                                        android:padding="10dp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="10dp"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:text="Installment Amount"
                                                android:textColor="@color/black"
                                                android:textSize="14dp"
                                                tools:ignore="Autofill" />

                                            <TextView
                                                android:layout_width="10dp"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:text=":"
                                                android:textColor="@color/black"
                                                android:textSize="15dp"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/tv_instalment"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:layout_weight="1.8"
                                                android:gravity="end"
                                                android:textColor="@color/black"
                                                android:textSize="14dp"
                                                tools:ignore="Autofill" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="2dp"
                                            android:orientation="horizontal">


                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:text="Total Interest"
                                                android:textColor="@color/black"
                                                android:textSize="14dp"
                                                tools:ignore="Autofill" />

                                            <TextView
                                                android:layout_width="10dp"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:text=":"
                                                android:textColor="@color/black"
                                                android:textSize="15dp"
                                                android:textStyle="bold"
                                                tools:ignore="Autofill" />

                                            <TextView
                                                android:id="@+id/tv_interest_total"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:layout_weight="1.8"
                                                android:gravity="end"
                                                android:inputType="number"
                                                android:textColor="@color/black"
                                                android:textSize="14dp"
                                                tools:ignore="Autofill" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="2dp"
                                            android:layout_marginBottom="10dp"
                                            android:orientation="horizontal">


                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:text="Principal Interest"
                                                android:textColor="@color/black"
                                                android:textSize="14dp"
                                                tools:ignore="Autofill" />

                                            <TextView
                                                android:layout_width="10dp"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:text=":"
                                                android:textColor="@color/black"
                                                android:textSize="15dp"
                                                android:textStyle="bold"
                                                tools:ignore="Autofill" />

                                            <TextView
                                                android:id="@+id/tv_interest_principal"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:layout_weight="1.8"
                                                android:gravity="end"
                                                android:inputType="number"
                                                android:text=""
                                                android:textColor="@color/black"
                                                android:textSize="14dp"
                                                tools:ignore="Autofill" />
                                        </LinearLayout>

                                    </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginTop="25dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:orientation="horizontal">

                                <TextView

                                    android:id="@+id/btn_clear"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="Reset"
                                    android:backgroundTint="@color/white"
                                    android:textAllCaps="false"
                                    android:background="@drawable/bg_button"
                                    android:textColor="@color/colorPrimaryExtraDark"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="20dp"
                                    android:layout_height="match_parent" />

                                <TextView
                                    android:id="@+id/btn_calculate"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:background="@drawable/bg_button"
                                    android:backgroundTint="@color/colorExtraLight"
                                    android:textColor="@color/colorPrimaryExtraDark"
                                    android:text="Submit"
                                    android:textAllCaps="false"
                                    android:textSize="16sp"
                                    android:textStyle="bold"/>


                            </LinearLayout>



                        </LinearLayout>
                    </ScrollView>



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>