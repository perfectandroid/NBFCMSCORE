<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llmyaccountsdetails"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/btn_bg3"
                android:layout_height="150dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/otherbankicon"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/txtv_acntsummry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal|top"
                    android:text="Account Summary"
                    android:textColor="@color/colorPrimaryExtraDark"
                    android:textSize="13dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llpassbook"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="150dp"
                android:background="@drawable/btn_bg3"
                android:layout_margin="5dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/new_passbook"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/txtvpassbk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal|top"
                    android:textSize="13dp"
                    android:text="Passbook"
                    android:textColor="@color/colorPrimaryExtraDark"/>

            </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/llstandinginstruction"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_bg3"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/myquickpay"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txtvstand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal|top"
                android:text="Standing Instruction"
                android:textColor="@color/colorPrimaryExtraDark"
                android:textSize="13dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llnotice"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/btn_bg3"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/new_quick_balance" />

            <TextView
                android:id="@+id/txtv_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal|top"
                android:text="Notice"
                android:textColor="@color/colorPrimaryExtraDark"
                android:textSize="13dp"/>

        </LinearLayout>
    </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>