<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/bgcolour"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:background="@color/colorPrimary"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight=".2"
                android:src="@drawable/navback" />
            <TextView
                android:id="@+id/tv_header"
                android:layout_width="0dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="Deposit Calculator"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imgHome"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight=".2"
                android:padding="5dp"
                android:src="@drawable/ic_home" />
        </LinearLayout>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ll_bottombar">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="5dp">

                    <ImageView
                        android:id="@+id/imemilogo"
                        android:layout_width="250dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center_horizontal"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_light_grey2"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtv_type"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:layout_marginTop="2dp"
                                android:paddingLeft="10dp"
                                android:text="Type of Deposit: "
                                android:textColor="@color/bottom_line1"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <Spinner
                                    android:id="@+id/spn_deposit_type"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start"
                                    android:gravity="start"
                                    android:popupBackground="#cccccc"
                                    android:layout_marginBottom="5dp"
                                    android:spinnerMode="dialog"
                                    android:backgroundTint="@color/blue"/>

                            </LinearLayout>
                        </LinearLayout>
                        <!--                            <TextView-->
                        <!--                                android:id="@+id/tv_as_on_date"-->
                        <!--                                android:layout_width="match_parent"-->
                        <!--                                android:layout_height="wrap_content"-->
                        <!--                                android:textColor="@color/FireBrick"-->
                        <!--                                android:visibility="gone"-->
                        <!--                                android:paddingLeft="30dp"-->
                        <!--                                android:paddingBottom="5dp"-->
                        <!--                                android:textSize="12sp"-->
                        <!--                                android:textStyle="bold"/>-->





                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_light_grey2"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtv_beneficiary"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:layout_marginTop="2dp"
                                    android:paddingLeft="10dp"
                                    android:text="Beneficiary: "
                                    android:textColor="@color/bottom_line1"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">


                                    <Spinner
                                        android:id="@+id/spn_beneficiary"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="start"
                                        android:gravity="start"
                                        android:popupBackground="#cccccc"
                                        android:layout_marginBottom="5dp"
                                        android:spinnerMode="dialog"
                                        android:backgroundTint="@color/blue"/>

                                </LinearLayout>
                            </LinearLayout>
                            <!--                            <TextView-->
                            <!--                                android:id="@+id/tv_as_on_date"-->
                            <!--                                android:layout_width="match_parent"-->
                            <!--                                android:layout_height="wrap_content"-->
                            <!--                                android:textColor="@color/FireBrick"-->
                            <!--                                android:visibility="gone"-->
                            <!--                                android:paddingLeft="30dp"-->
                            <!--                                android:paddingBottom="5dp"-->
                            <!--                                android:textSize="12sp"-->
                            <!--                                android:textStyle="bold"/>-->





                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/bg_textview"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:background="@color/bg_textview"
                            android:layout_marginBottom="15dp"
                            android:orientation="vertical">



                            <TextView
                                android:id="@+id/txtamt"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:layout_marginTop="2dp"
                                android:layout_marginLeft="7dp"
                                android:textColor="@color/bottom_line1"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:text="Amount:"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <EditText
                                    android:id="@+id/etxt_amount"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:inputType="number"
                                    android:drawableLeft="@drawable/rupee"
                                    android:drawablePadding="10dp"
                                    android:textStyle="bold"
                                    android:textSize="15dp"
                                    android:maxLength="13"
                                    android:backgroundTint="@color/bottom_line1"/>

                                <TextView
                                    android:id="@+id/txt_amtinword"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="13dp"
                                    android:textStyle="bold"/>

                                <!--                android:background="@drawable/custom_edt_txt_account_border"-->





                            </LinearLayout>



                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/bg_textview"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtv_tenure"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:layout_marginTop="2dp"
                                    android:paddingLeft="10dp"
                                    android:text="Tenure:"
                                    android:textColor="@color/bottom_line1"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:background="@drawable/bg_light_grey2"
                                    android:orientation="horizontal">


                                    <Spinner
                                        android:id="@+id/spn_tenure"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="start"
                                        android:gravity="start"
                                        android:popupBackground="#cccccc"
                                        android:spinnerMode="dialog"
                                        android:backgroundTint="@color/blue"/>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/bg_light_grey2"
                                    android:orientation="vertical">
                                    <EditText
                                        android:id="@+id/edt_txt_tenure"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:inputType="number"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:drawablePadding="10dp"
                                        android:textStyle="bold"
                                        android:textSize="15dp"
                                        android:maxLength="13"
                                        android:backgroundTint="@android:color/transparent"/>
                                </LinearLayout>



                            </LinearLayout>



                        </LinearLayout>



                    </LinearLayout>





                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llOutput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:visibility="gone">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="@color/bg_textview"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="10dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="TypeName"
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    tools:ignore="Autofill" />

                                <TextView
                                    android:layout_width="10dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text=":"
                                    android:textColor="@color/black"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_type"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1.8"
                                    android:gravity="end"
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    tools:ignore="Autofill" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Period"
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    tools:ignore="Autofill" />

                                <TextView
                                    android:layout_width="10dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text=":"
                                    android:textColor="@color/black"
                                    android:textSize="15dp"
                                    android:textStyle="bold"
                                    tools:ignore="Autofill" />

                                <TextView
                                    android:id="@+id/tv_period"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1.8"
                                    android:gravity="end"
                                    android:inputType="number"
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    tools:ignore="Autofill" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Rate of Interest(%)"
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    tools:ignore="Autofill" />

                                <TextView
                                    android:layout_width="10dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text=":"
                                    android:textColor="@color/black"
                                    android:textSize="15dp"
                                    android:textStyle="bold"
                                    tools:ignore="Autofill" />

                                <TextView
                                    android:id="@+id/tv_rateofinterest"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1.8"
                                    android:gravity="end"
                                    android:inputType="number"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    tools:ignore="Autofill" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Amount"
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    tools:ignore="Autofill" />

                                <TextView
                                    android:layout_width="10dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text=":"
                                    android:textColor="@color/black"
                                    android:textSize="15dp"
                                    android:textStyle="bold"
                                    tools:ignore="Autofill" />

                                <TextView
                                    android:id="@+id/tv_amt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1.8"
                                    android:gravity="end"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    tools:ignore="Autofill" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Maturity Amount"
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    tools:ignore="Autofill" />

                                <TextView
                                    android:layout_width="10dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text=":"
                                    android:textColor="@color/black"
                                    android:textSize="15dp"
                                    android:textStyle="bold"
                                    tools:ignore="Autofill" />

                                <TextView
                                    android:id="@+id/tv_maturityamt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1.8"
                                    android:gravity="end"
                                    android:inputType="number"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    tools:ignore="Autofill" />
                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_clear"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/but_ronded1"
                        android:text="Reset"
                        android:textColor="@color/white" />


                    <Button
                        android:id="@+id/btn_submit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/but_rounded2"
                        android:text="Calculate"
                        android:textColor="@color/white" />
                </LinearLayout>
