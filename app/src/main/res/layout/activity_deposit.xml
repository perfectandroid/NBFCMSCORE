<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:background="@color/colorPrimary"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight=".2"
                android:src="@drawable/arrow_left_icon"
                app:tint="@color/white" />
            <TextView
                android:id="@+id/tv_header"
                android:layout_width="0dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="Deposit Calculator"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imgHome"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight=".2"
                android:padding="5dp"
                android:src="@drawable/ic_home"
                app:tint="@color/white"
                />
        </LinearLayout>
    </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ll_bottombar">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="5dp">

                    <ImageView
                        android:id="@+id/imemilogo"
                        android:layout_width="250dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="20dp"
                        android:visibility="gone"
                        android:layout_gravity="center_horizontal"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_light_grey"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        android:padding="5dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtv_type"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:layout_marginTop="2dp"
                                android:text="Type of Deposit"
                                android:textColor="@color/colorPrimaryExtraDark"
                                android:textSize="15dp"
                                android:textStyle="bold" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/input_deposite"
                                    android:layout_marginLeft="5dp"
                                    app:tint="@color/colorPrimaryExtraDark" />
                                <Spinner
                                    android:id="@+id/spn_deposit_type"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start"
                                    android:gravity="start"
                                    android:popupBackground="#cccccc"
                                    android:layout_marginBottom="5dp"
                                    android:spinnerMode="dialog"
                                    android:backgroundTint="@color/blue"/>

                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_light_grey"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtv_beneficiary"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:layout_marginTop="2dp"
                                    android:text="Beneficiary"
                                    android:textColor="@color/colorPrimaryExtraDark"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:src="@drawable/input_user"
                                        android:layout_marginLeft="5dp"
                                        app:tint="@color/colorPrimaryExtraDark" />

                                    <Spinner
                                        android:id="@+id/spn_beneficiary"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_gravity="start"
                                        android:gravity="start"
                                        android:popupBackground="#cccccc"
                                        android:layout_marginBottom="5dp"
                                        android:spinnerMode="dialog"
                                        android:backgroundTint="@color/blue"/>

                                </LinearLayout>
                            </LinearLayout>
                            <!--                            <TextView-->
                            <!--                                android:id="@+id/tv_as_on_date"-->
                            <!--                                android:layout_width="match_parent"-->
                            <!--                                android:layout_height="wrap_content"-->
                            <!--                                android:textColor="@color/FireBrick"-->
                            <!--                                android:visibility="gone"-->
                            <!--                                android:paddingLeft="30dp"-->
                            <!--                                android:paddingBottom="5dp"-->
                            <!--                                android:textSize="12dp"-->
                            <!--                                android:textStyle="bold"/>-->





                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_light_grey"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:background="@color/color_activity_transparent"
                            android:orientation="vertical">



                            <TextView
                                android:id="@+id/txtamt"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:layout_marginTop="2dp"
                                android:textColor="@color/colorPrimaryExtraDark"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:text="Amount"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:src="@drawable/input_rupees"
                                        android:layout_marginLeft="5dp"
                                        app:tint="@color/colorPrimaryExtraDark" />

                                <EditText
                                    android:id="@+id/etxt_amount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:inputType="number"
                                    android:drawablePadding="10dp"
                                    android:textSize="15dp"
                                    android:hint="Amount"
                                    android:textColorHint="@color/text_secondary"
                                    android:maxLength="13"
                                    android:backgroundTint="@color/transparent"/>
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/txt_amtinword"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="13dp"
                                    android:textStyle="bold"/>

                                <!--                android:background="@drawable/custom_edt_txt_account_border"-->





                            </LinearLayout>



                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_light_grey"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtv_tenure"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:layout_marginTop="2dp"
                                    android:text="Tenure"
                                    android:textColor="@color/colorPrimaryExtraDark"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:orientation="horizontal">


                                    <Spinner
                                        android:id="@+id/spn_tenure"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="start"
                                        android:gravity="start"
                                        android:popupBackground="#cccccc"
                                        android:spinnerMode="dialog"
                                        android:backgroundTint="@color/blue"/>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:src="@drawable/input_calender"
                                        android:layout_marginLeft="5dp"
                                        app:tint="@color/colorPrimaryExtraDark" />
                                    <EditText
                                        android:id="@+id/edt_txt_tenure"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="number"
                                        android:layout_marginLeft="10dp"
                                        android:hint="Tenure"
                                        android:textColorHint="@color/text_secondary"
                                        android:layout_marginRight="10dp"
                                        android:drawablePadding="10dp"
                                        android:textSize="15dp"
                                        android:maxLength="13"
                                        android:backgroundTint="@color/transparent"/>
                                </LinearLayout>



                            </LinearLayout>



                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llOutput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:visibility="gone">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@drawable/btn_bg5"
                            android:padding="10dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="TypeName"
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    tools:ignore="Autofill" />

                                <TextView
                                    android:layout_width="10dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text=":"
                                    android:textColor="@color/black"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_type"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1.8"
                                    android:gravity="end"
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    tools:ignore="Autofill" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Period"
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    tools:ignore="Autofill" />

                                <TextView
                                    android:layout_width="10dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text=":"
                                    android:textColor="@color/black"
                                    android:textSize="15dp"
                                    android:textStyle="bold"
                                    tools:ignore="Autofill" />

                                <TextView
                                    android:id="@+id/tv_period"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1.8"
                                    android:gravity="end"
                                    android:inputType="number"
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    tools:ignore="Autofill" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Rate of Interest(%)"
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    tools:ignore="Autofill" />

                                <TextView
                                    android:layout_width="10dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text=":"
                                    android:textColor="@color/black"
                                    android:textSize="15dp"
                                    android:textStyle="bold"
                                    tools:ignore="Autofill" />

                                <TextView
                                    android:id="@+id/tv_rateofinterest"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1.8"
                                    android:gravity="end"
                                    android:inputType="number"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    tools:ignore="Autofill" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Amount"
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    tools:ignore="Autofill" />

                                <TextView
                                    android:layout_width="10dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text=":"
                                    android:textColor="@color/black"
                                    android:textSize="15dp"
                                    android:textStyle="bold"
                                    tools:ignore="Autofill" />

                                <TextView
                                    android:id="@+id/tv_amt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1.8"
                                    android:gravity="end"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    tools:ignore="Autofill" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Maturity Amount"
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    tools:ignore="Autofill" />

                                <TextView
                                    android:layout_width="10dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text=":"
                                    android:textColor="@color/black"
                                    android:textSize="15dp"
                                    android:textStyle="bold"
                                    tools:ignore="Autofill" />

                                <TextView
                                    android:id="@+id/tv_maturityamt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1.8"
                                    android:gravity="end"
                                    android:inputType="number"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    tools:ignore="Autofill" />
                            </LinearLayout>
                        </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">

                    <TextView

                        android:id="@+id/btn_clear"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Reset"
                        android:backgroundTint="@color/white"
                        android:textAllCaps="false"
                        android:background="@drawable/bg_button"
                        android:textColor="@color/colorPrimaryExtraDark"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="20dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/btn_submit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/bg_button"
                        android:backgroundTint="@color/colorExtraLight"
                        android:textColor="@color/colorPrimaryExtraDark"
                        android:text="Submit"
                        android:textAllCaps="false"
                        android:textSize="16dp"
                        android:textStyle="bold"/>


                </LinearLayout>
            </LinearLayout>

        </ScrollView>





</LinearLayout>