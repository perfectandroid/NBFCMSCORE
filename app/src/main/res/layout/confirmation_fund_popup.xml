                            android:layout_height="40dp"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:textSize="16dp"
                            android:textStyle="normal"
                            android:background="@drawable/bg_unselect"
                            android:text="Cancel"
                            android:textColor="@color/white" />
                        <Button
