<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/llmain"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/transparent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:layout_weight="1.1"
            android:id="@+id/lnr_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_slno"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:layout_height="wrap_content"

                />
        </LinearLayout>

        <View
            android:background="?android:attr/dividerVertical"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>



        <LinearLayout
            android:layout_weight="1.05"
            android:id="@+id/lnr_total_ticket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/txt_NoticeTypeName"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:layout_height="wrap_content"

                />
        </LinearLayout>

        <View
            android:background="?android:attr/dividerVertical"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/lnr_opening_ticket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/txt_AccountType"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:layout_height="wrap_content"

                />
        </LinearLayout>

        <View
            android:background="?android:attr/dividerVertical"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/lnr_resolved_ticket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/txt_AccountNo"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:textColor="@color/green"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <View
            android:background="?android:attr/dividerVertical"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/lnr_software_pending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_NoticeDate"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:textColor="@color/purple_700"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:background="?android:attr/dividerVertical"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_DueAmount"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:textColor="@color/redDark"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>