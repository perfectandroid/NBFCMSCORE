<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight=".2"
                    android:src="@drawable/arrow_left_icon"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/tv_mycart"
                    android:layout_width="0dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:text="Enquiry"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />


                <ImageView
                    android:id="@+id/imgHome"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight=".2"
                    android:padding="5dp"
                    android:src="@drawable/ic_home"
                    app:tint="@color/white" />

            </LinearLayout>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imfeedbacklogo"
                    android:layout_width="250dp"
                    android:visibility="gone"
                    android:layout_height="150dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_horizontal" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_upi_select"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtv_type"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:layout_marginTop="2dp"
                                android:paddingLeft="10dp"
                                android:text="Enquiry Type"
                                android:textColor="@color/colorPrimaryExtraDark"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp">

                                <Spinner
                                    android:id="@+id/spn_feedbk"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:dropDownWidth="match_parent"
                                    android:spinnerMode="dropdown">

                                </Spinner>
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_upi_select"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtFeedBack"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:layout_marginTop="2dp"
                                android:paddingLeft="10dp"
                                android:text="Feedback"
                                android:textColor="@color/colorPrimaryExtraDark"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/feedbackText"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:hint="Feedback"
                                    android:drawablePadding="10dp"
                                    android:textSize="15dp"
                                    android:lines="3"
                                    android:backgroundTint="@color/transparent" />


                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>

                <CheckBox
                    android:id="@+id/rad_callbk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimaryExtraDark"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryExtraDark"
                    android:text="@string/executve" />

                <RadioButton
                    android:id="@+id/rad_callbk1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimaryExtraDark"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryExtraDark"
                    android:text="Executive Call Back" />

                <LinearLayout
                    android:id="@+id/llmob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/bg_upi_select"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtMobile"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:layout_marginTop="2dp"
                                    android:paddingLeft="10dp"
                                    android:text="Mobile Number"
                                    android:textColor="@color/colorPrimaryExtraDark"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:orientation="horizontal">

                                    <EditText
                                        android:id="@+id/etxtmob"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:drawablePadding="10dp"
                                        android:visibility="visible"
                                        android:textSize="15dp"
                                        android:inputType="number"
                                        android:maxLength="10"
                                        android:lines="1"
                                        android:backgroundTint="@color/transparent" />


                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lldate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_upi_select"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:layout_marginTop="2dp"
                                    android:paddingLeft="10dp"
                                    android:text="Convenient Date"
                                    android:textColor="@color/colorPrimaryExtraDark"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:orientation="horizontal">

                                    <EditText
                                        android:id="@+id/etxtDate"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:drawablePadding="10dp"
                                        android:focusable="false"
                                        android:hint="Convenient Date"
                                        android:visibility="visible"
                                        android:textSize="15dp"
                                        android:maxLength="10"
                                        android:lines="1"
                                        android:backgroundTint="@color/transparent" />


                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lltimeinterval"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_upi_select"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtv_time"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:layout_marginTop="2dp"
                                    android:paddingLeft="10dp"
                                    android:text="Convenient Time"
                                    android:textColor="@color/colorPrimaryExtraDark"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_margin="10dp"
                                    android:weightSum="3">

                                    <Spinner
                                        android:id="@+id/spn_bfreafter"
                                        android:layout_width="350dp"
                                        android:layout_height="40dp"
                                        android:visibility="visible"
                                        android:layout_weight="1"
                                        android:dropDownWidth="match_parent"
                                        android:spinnerMode="dropdown">

                                    </Spinner>

                                    <Spinner
                                        android:id="@+id/spn_time"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:visibility="visible"
                                        android:layout_weight="1"
                                        android:dropDownWidth="match_parent"
                                        android:spinnerMode="dropdown">

                                    </Spinner>

                                    <Spinner
                                        android:id="@+id/spn_ampm"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:visibility="visible"
                                        android:layout_weight="1"
                                        android:dropDownWidth="match_parent"
                                        android:spinnerMode="dropdown">

                                    </Spinner>
                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lltime"
                    android:layout_margin="10dp"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/etxt_tmfrm"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="start"
                        android:inputType="textEmailAddress"
                        android:textSize="15dp"
                        android:hint="From"
                        android:textColor="@color/black"
                        android:layout_weight="1.5"
                        android:drawablePadding="10dp"
                        android:drawableLeft="@drawable/time"
                        android:padding="5dp"
                        android:layout_marginLeft="3dp"
                        android:lines="2" />

                    <TextView
                        android:id="@+id/etxt_tmto"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="start"
                        android:inputType="textEmailAddress"
                        android:textSize="15dp"
                        android:drawablePadding="15dp"
                        android:drawableLeft="@drawable/time"
                        android:hint="To"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:layout_marginRight="10dp"
                        android:lines="2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/bg_upi_select"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:layout_marginTop="2dp"
                                    android:paddingLeft="10dp"
                                    android:text="Contact Email"
                                    android:textColor="@color/colorPrimaryExtraDark"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:orientation="horizontal">

                                    <EditText
                                        android:id="@+id/etxtemail"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:drawablePadding="10dp"
                                        android:hint="Contact Email"
                                        android:visibility="visible"
                                        android:textSize="15dp"
                                        android:inputType="textEmailAddress"
                                        android:lines="1"
                                        android:backgroundTint="@color/transparent" />


                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>
                </LinearLayout>
                <!--<EditText
                    android:id="@+id/etxtemail"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="start"
                    android:inputType="textEmailAddress"
                    android:textSize="15dp"
                    android:hint="Email"
                    android:visibility="visible"
                    android:background="@drawable/etbackgroung1"
                    android:padding="5dp"
                    android:layout_margin="10dp"
                    android:lines="2"
                    />-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">

                    <TextView

                        android:id="@+id/btn_clear"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Reset"
                        android:backgroundTint="@color/white"
                        android:textAllCaps="false"
                        android:background="@drawable/bg_button"
                        android:textColor="@color/colorPrimaryExtraDark"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="20dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/btn_submit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/bg_button"
                        android:backgroundTint="@color/colorExtraLight"
                        android:textColor="@color/colorPrimaryExtraDark"
                        android:text="Submit"
                        android:textAllCaps="false"
                        android:textSize="16dp"
                        android:textStyle="bold"/>


                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>