<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:cardBackgroundColor="#f3f2f8"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/llmain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="1dp"
            tools:ignore="MissingConstraints">
            <ImageView
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:id="@+id/imlogo"/>
            <TextView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:id="@+id/lang_shortname"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/tvbg"
                android:backgroundTint="@color/color_langround"
                android:foregroundTint="@color/color_langround"
                android:padding="15dp"
                android:textStyle="bold"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lang_name"
                android:textColor="@color/black_lang"
                android:layout_gravity="center"
                android:gravity="left"
                android:padding="10dp"
                android:drawableRight="@drawable/arrowright"
                android:textStyle="bold"
                android:text=""
                android:textSize="15dp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>