<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bgcolour"
    tools:context=".Fragment.BackViewFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:elevation="20dp"
        android:background="@drawable/backcard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/txtv_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Virtual Card"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="normal"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical"
                    android:textSize="15sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"/>


            </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/backcard"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:gravity="left"
                        android:text="Not Transferable"
                        android:textColor="@android:color/white"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="right"
                        android:paddingLeft="30dp"
                        android:text="Please Keep Your Card Confidential"
                        android:textColor="@android:color/white"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:paddingLeft="5dp"
                            android:text="Address"
                            android:textColor="@android:color/white"
                            android:textSize="12dp" />
                        <TextView
                            android:id="@+id/txtv_addrs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:paddingLeft="58dp"
                            android:maxLines="4"
                            android:text="dfdfff"
                            android:textColor="@android:color/white"
                            android:textSize="12dp" />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="2dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:paddingLeft="5dp"
                            android:text="Phone"
                            android:textColor="@android:color/white"
                            android:textSize="12dp" />
                        <TextView
                            android:id="@+id/txtv_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:paddingLeft="66dp"
                            android:text="fdff"
                            android:textColor="@android:color/white"
                            android:textSize="12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:layout_marginTop="2dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="Customer id "
                            android:paddingLeft="5dp"
                            android:textColor="@android:color/white"
                            android:textSize="12dp" />
                        <TextView
                            android:id="@+id/txt_customerid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:paddingLeft="33dp"
                            android:text="fdf"
                            android:textColor="@android:color/white"
                            android:textSize="12dp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        >
                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="80dp"
                            android:gravity="center"
                            android:background="@color/white"
                            android:layout_gravity="center"
                            android:layout_weight="1">
                            <ImageView
                                android:id="@+id/imgv_barcode"
                                android:layout_width="180dp"
                                android:layout_height="80dp"
                                android:gravity="center"
                                android:layout_gravity="center"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_weight="1.5">
                            <ImageView
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:id="@+id/imgv_qrcode"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_width="80dp"
                                android:layout_height="80dp"/></LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtv_purpose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:textSize="15sp"
                    tools:ignore="MissingConstraints" />
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtv_points1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/transactions"
                            android:gravity="center"
                            android:textSize="13sp"
                            android:visibility="gone"
                            android:drawableLeft="@drawable/ic_star"
                            tools:ignore="MissingConstraints" />

                        <TextView
                            android:id="@+id/txtv_points2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/singlecard"
                            android:drawableLeft="@drawable/ic_star"
                            android:gravity="center"
                            android:textSize="13sp"
                            android:visibility="gone"
                            tools:ignore="MissingConstraints" />

                        <TextView
                            android:id="@+id/txtv_points3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/portfolio"
                            android:drawableLeft="@drawable/ic_star"
                            android:gravity="center"
                            android:textSize="13sp"
                            android:visibility="gone"
                            tools:ignore="MissingConstraints" />

                        <TextView
                            android:id="@+id/txtv_points4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/queue"
                            android:gravity="center"
                            android:textSize="13sp"
                            android:visibility="gone"
                            android:drawableLeft="@drawable/ic_star"
                            tools:ignore="MissingConstraints" />

                    </LinearLayout>
                </ScrollView>
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>