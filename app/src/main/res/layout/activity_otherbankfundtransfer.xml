<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight=".2"
                android:src="@drawable/navback"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/tv_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Other Account Fund Transfer"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgHome"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight=".2"
                android:padding="5dp"
                android:src="@drawable/ic_home"
                app:tint="@color/white" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/bg_light_grey"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtvPayingfrom"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginBottom="7dp"
                                    android:gravity="start"
                                    android:text="Paying From"
                                    android:textColor="@color/colorPrimaryExtraDark"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/tv_branch_name"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="left"
                                            android:gravity="center_vertical"
                                            android:text=""
                                            android:textColor="@color/black_lang"
                                            android:textSize="13sp"
                                            android:textStyle="normal" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">


                                            <LinearLayout
                                                android:layout_width="fill_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:orientation="horizontal">

                                                <ImageView
                                                    android:layout_width="20dp"
                                                    android:layout_height="20dp"
                                                    android:layout_marginRight="5dp"
                                                    android:src="@drawable/input_bank" />

                                                <TextView
                                                    android:id="@+id/txtv_accno"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="left"
                                                    android:drawablePadding="4dp"
                                                    android:gravity="center_vertical"
                                                    android:text="Account No."
                                                    android:textColor="@color/black_lang"
                                                    android:textSize="13sp"
                                                    android:textStyle="normal" />
                                            </LinearLayout>

                                            <TextView
                                                android:id="@+id/tv_account_no"
                                                android:layout_width="fill_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="left"
                                                android:layout_weight="1"
                                                android:gravity="center_vertical"
                                                android:textColor="@color/colorPrimary"
                                                android:textSize="16sp"
                                                android:textStyle="bold" />
                                        </LinearLayout>


                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:layout_marginRight="5dp"
                                            android:src="@drawable/input_rupees" />

                                        <TextView
                                            android:id="@+id/txtv_availbl"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:layout_weight="1"
                                            android:drawablePadding="4dp"
                                            android:gravity="center_vertical"
                                            android:text="Available Balance"
                                            android:textColor="@color/black_lang"
                                            android:textSize="12sp"
                                            android:textStyle="normal" />
                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/tv_balance"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_weight="1"
                                        android:gravity="center_vertical"
                                        android:text=""
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="10sp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <Spinner
                                    android:id="@+id/spn_account_num"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start"
                                    android:layout_marginTop="2dp"
                                    android:backgroundTint="@color/blue"
                                    android:gravity="start"
                                    android:popupBackground="#cccccc"
                                    android:spinnerMode="dialog"
                                    android:visibility="gone" />
                                <!--                style="@style/Base.Widget.AppCompat.Spinner.Underlined"-->
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/bg_light_grey"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView5"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:gravity="start"
                                    android:text="@string/reciever_account_type"
                                    android:textColor="@color/colorPrimaryExtraDark"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_marginLeft="5dp"
                                        android:src="@drawable/input_bank"
                                        app:tint="@color/colorPrimaryExtraDark" />

                                    <Spinner
                                        android:id="@+id/spn_account_type"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:dropDownWidth="match_parent"
                                        android:spinnerMode="dropdown" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_list"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginBottom="10dp"
                                android:visibility="gone">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="3dp"
                                    android:orientation="vertical">

                                    <com.perfect.nbfcmscore.Helper.FullLenghRecyclertview
                                        android:id="@+id/rv_split_details"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="5dp"
                                        android:background="@color/light_screen" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/tv_availbal"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:paddingStart="8dp"
                                    android:paddingLeft="8dp"
                                    android:paddingEnd="8dp"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:textStyle="normal" />

                                <TextView
                                    android:id="@+id/tv_dueamount"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:gravity="start"
                                    android:paddingStart="8dp"
                                    android:paddingLeft="8dp"
                                    android:paddingEnd="8dp"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:textStyle="normal"
                                    android:visibility="gone" />

                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/bg_light_grey"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtv_acno2"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:gravity="start"
                                android:text="@string/account_no"
                                android:textColor="@color/colorPrimaryExtraDark"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginBottom="5dp"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="visible">

                                    <EditText
                                        android:id="@+id/acc_no_block_one"
                                        android:layout_width="60dp"
                                        android:layout_height="40dp"
                                        android:layout_alignBottom="@+id/acc_no_block_two"
                                        android:layout_alignParentTop="true"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginEnd="2dp"
                                        android:layout_marginRight="2dp"
                                        android:layout_toStartOf="@+id/acc_no_block_two"
                                        android:layout_toLeftOf="@+id/acc_no_block_two"
                                        android:background="@drawable/etbackgroung1"
                                        android:gravity="center"
                                        android:imeActionId="@integer/viewfinder_border_width"
                                        android:inputType="numberPassword"
                                        android:maxLength="3"
                                        android:paddingStart="5dp"
                                        android:paddingLeft="5dp"
                                        android:paddingEnd="5dp" />

                                    <EditText
                                        android:id="@+id/acc_no_block_two"
                                        android:layout_width="60dp"
                                        android:layout_height="40dp"
                                        android:layout_alignBottom="@+id/acc_no_block_three"
                                        android:layout_alignParentTop="true"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginEnd="3dp"
                                        android:layout_marginRight="3dp"
                                        android:layout_toStartOf="@+id/acc_no_block_three"
                                        android:layout_toLeftOf="@+id/acc_no_block_three"
                                        android:background="@drawable/etbackgroung1"
                                        android:ems="3"
                                        android:gravity="center"
                                        android:imeActionId="@integer/viewfinder_border_width"
                                        android:inputType="numberPassword"
                                        android:maxLength="3"
                                        android:paddingStart="5dp"
                                        android:paddingLeft="5dp"
                                        android:paddingEnd="5dp" />

                                    <EditText
                                        android:id="@+id/acc_no_block_three"
                                        android:layout_width="100dp"
                                        android:layout_height="40dp"
                                        android:layout_alignBottom="@+id/btn_scan_acnt_no"
                                        android:layout_alignParentTop="true"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginEnd="3dp"
                                        android:layout_marginRight="3dp"
                                        android:layout_toStartOf="@+id/btn_scan_acnt_no"
                                        android:layout_toLeftOf="@+id/btn_scan_acnt_no"
                                        android:background="@drawable/etbackgroung1"
                                        android:ems="6"
                                        android:gravity="center"
                                        android:imeActionId="@integer/viewfinder_border_width"
                                        android:inputType="numberPassword"
                                        android:maxLength="6"
                                        android:paddingStart="5dp"
                                        android:paddingLeft="5dp"
                                        android:paddingEnd="5dp" />

                                    <Button
                                        android:id="@+id/btn_scan_acnt_no"
                                        android:layout_width="70dp"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentEnd="true"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginTop="5dp"
                                        android:backgroundTint="@color/colorPrimary"
                                        android:padding="5dp"
                                        android:text="@string/scan"
                                        android:textAllCaps="false"
                                        android:textColor="@color/white"
                                        android:textSize="10sp" />

                                </RelativeLayout>


                            </LinearLayout>
                        </LinearLayout>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/bg_light_grey"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtv_confrmacc"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:gravity="start"
                                android:text="@string/confirm_acc_no"
                                android:textColor="@color/colorPrimaryExtraDark"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginBottom="5dp"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="visible">

                                    <EditText
                                        android:id="@+id/confirm_acc_no_block_one"
                                        android:layout_width="60dp"
                                        android:layout_height="match_parent"
                                        android:layout_alignBottom="@+id/confirm_acc_no_block_two"
                                        android:layout_alignParentTop="true"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginEnd="3dp"
                                        android:layout_marginRight="3dp"
                                        android:layout_toStartOf="@+id/confirm_acc_no_block_two"
                                        android:layout_toLeftOf="@+id/confirm_acc_no_block_two"
                                        android:background="@drawable/etbackgroung1"
                                        android:imeActionId="@integer/viewfinder_border_width"
                                        android:inputType="number"
                                        android:maxLength="3" />

                                    <EditText
                                        android:id="@+id/confirm_acc_no_block_two"
                                        android:layout_width="60dp"
                                        android:layout_height="match_parent"
                                        android:layout_alignBottom="@+id/confirm_acc_no_block_three"
                                        android:layout_alignParentTop="true"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginEnd="3dp"
                                        android:layout_marginRight="3dp"
                                        android:layout_toStartOf="@+id/confirm_acc_no_block_three"
                                        android:layout_toLeftOf="@+id/confirm_acc_no_block_three"
                                        android:background="@drawable/etbackgroung1"
                                        android:ems="3"
                                        android:imeActionId="@integer/viewfinder_border_width"
                                        android:inputType="number"
                                        android:maxLength="3"
                                        android:paddingStart="5dp"
                                        android:paddingLeft="5dp"
                                        android:paddingEnd="5dp" />

                                    <EditText
                                        android:id="@+id/confirm_acc_no_block_three"
                                        android:layout_width="100dp"
                                        android:layout_height="fill_parent"
                                        android:layout_alignBottom="@+id/confirm_button"
                                        android:layout_alignParentTop="true"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginEnd="3dp"
                                        android:layout_marginRight="3dp"
                                        android:layout_toStartOf="@+id/confirm_button"
                                        android:layout_toLeftOf="@+id/confirm_button"
                                        android:background="@drawable/etbackgroung1"
                                        android:ems="6"
                                        android:imeActionId="@integer/viewfinder_border_width"
                                        android:inputType="number"
                                        android:maxLength="6"
                                        android:paddingStart="5dp"
                                        android:paddingLeft="5dp"
                                        android:paddingEnd="5dp" />

                                    <Button
                                        android:id="@+id/confirm_button"
                                        android:layout_width="70dp"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentEnd="true"
                                        android:layout_alignParentRight="true"
                                        android:background="@null"
                                        android:text="@string/scan"
                                        android:textAllCaps="false"
                                        android:textColor="@color/white"
                                        android:visibility="invisible" />

                                </RelativeLayout>

                            </LinearLayout>
                        </LinearLayout>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/bg_light_grey"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtv_amtpayable"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:gravity="start"
                                android:text="Amount Payable"
                                android:textColor="@color/colorPrimaryExtraDark"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginLeft="5dp"
                                    android:src="@drawable/input_rupees"
                                    app:tint="@color/colorPrimaryExtraDark" />

                                <EditText
                                    android:id="@+id/edt_txt_amount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:backgroundTint="@color/transparent"
                                    android:hint="Amount"
                                    android:inputType="number"
                                    android:maxLength="13"
                                    android:textColor="@color/colorAccent"
                                    android:textColorHint="@color/text_secondary"
                                    android:textSize="15dp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/txt_amtinword"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:textSize="13dp" />

                            <TextView
                                android:id="@+id/tv_maxamount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="5dp"
                                android:gravity="center"
                                android:textColor="@color/red"
                                android:textSize="14dp" />
                        </LinearLayout>
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/rltv_subscriber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/bg_light_grey"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtv_remark"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:gravity="start"
                                android:text="Remark"
                                android:textColor="@color/colorPrimaryExtraDark"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginLeft="5dp"
                                    android:src="@drawable/input_remark"
                                    app:tint="@color/colorPrimaryExtraDark" />

                                <EditText
                                    android:id="@+id/edt_txt_remark"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:backgroundTint="@color/transparent"
                                    android:hint="Remark"
                                    android:inputType="text"
                                    android:maxLength="13"
                                    android:textColor="@color/colorAccent"
                                    android:textColorHint="@color/text_secondary"
                                    android:textSize="15dp" />


                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/ll_bottombar"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/btn_clear"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_button"
                            android:backgroundTint="@color/white"
                            android:gravity="center"
                            android:text="Reset"
                            android:textAllCaps="false"
                            android:textColor="@color/colorPrimaryExtraDark"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="20dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/btn_submit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_button"
