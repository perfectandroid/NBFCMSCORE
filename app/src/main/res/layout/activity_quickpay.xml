<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:background="@color/colorPrimary"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight=".2"
                android:src="@drawable/navback" />
            <TextView
                android:id="@+id/tv_header"
                android:layout_width="0dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="Quick Pay"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imgHome"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight=".2"
                android:padding="5dp"
                android:src="@drawable/ic_home" />

        </LinearLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/linear_animation_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:background="@android:color/transparent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rltv_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray_btn_bg_color"
                android:padding="10dp"
                android:visibility="gone">
                <TextView
                    android:id="@+id/txt_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="An error was occured !!!...."
                    android:textColor="@color/white"/>
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"                        android:padding="5dp"
                app:cardBackgroundColor="@color/bg_transfer"
                app:cardCornerRadius="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_light_grey"
                    android:orientation="vertical"
                    android:padding="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtv_slctacnt"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:layout_marginTop="2dp"
                            android:paddingLeft="10dp"
                            android:text="@string/select_account"
                            android:textColor="@color/bottom_line1"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp" >
                            <Spinner
                                android:id="@+id/spn_account_num"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:dropDownWidth="match_parent"
                                android:spinnerMode="dropdown">

                            </Spinner>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"                        android:padding="5dp"
                app:cardBackgroundColor="@color/bg_transfer"
                app:cardCornerRadius="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_light_grey"
                    android:orientation="vertical"
                    android:padding="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtv_slctsndr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:layout_marginTop="2dp"
                            android:paddingLeft="10dp"
                            android:text="@string/select_sender"
                            android:textColor="@color/bottom_line1"
                            android:textSize="15sp"
                            android:layout_weight="1"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/add_new_sender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="2dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="center"
                            android:gravity="right"
                            android:paddingStart="8dp"
                            android:paddingLeft="8dp"
                            android:paddingEnd="8dp"
                            android:text="@string/add_new_sender"
                            android:textColor="@color/redDark"
                            android:textSize="10sp"
                            android:textStyle="normal"
                            tools:ignore="RelativeOverlap" />
                    </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp" >
                            <Spinner
                                android:id="@+id/sender_spinner"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:dropDownWidth="match_parent"
                                android:spinnerMode="dropdown">

                            </Spinner>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"                        android:padding="5dp"
                app:cardBackgroundColor="@color/bg_transfer"
                app:cardCornerRadius="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_light_grey"
                    android:orientation="vertical"
                    android:padding="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txtv_slctrecvr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:layout_marginTop="2dp"
                            android:paddingLeft="10dp"
                            android:layout_weight="1"
                            android:text="@string/select_receiver"
                            android:textColor="@color/bottom_line1"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/add_new_receiver"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="center"
                            android:gravity="right"
                            android:layout_weight="1"
                            android:paddingStart="8dp"
                            android:paddingLeft="8dp"
                            android:paddingEnd="8dp"
                            android:text="@string/add_new_receiver"
                            android:textColor="@color/redDark"
                            android:textSize="10sp"
                            android:textStyle="normal"
                            tools:ignore="RelativeOverlap" />
                    </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp" >
                            <Spinner
                                android:id="@+id/receiver_spinner"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:dropDownWidth="match_parent"
                                android:spinnerMode="dropdown">

                            </Spinner>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"                        android:padding="5dp"
                app:cardBackgroundColor="@color/bg_transfer"
                app:cardCornerRadius="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_light_grey"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@color/color_activity_transparent"
                        android:layout_marginBottom="15dp"
                        android:orientation="vertical">



                        <TextView
                            android:id="@+id/txtamt"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:layout_marginTop="2dp"
                            android:layout_marginLeft="7dp"
                            android:textColor="@color/bottom_line1"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:text="Amount Payable :"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <EditText
                                android:id="@+id/etxt_amount"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="number"
                                android:drawableLeft="@drawable/rupee"
                                android:drawablePadding="10dp"
                                android:textStyle="bold"
                                android:textSize="15dp"
                                android:maxLength="13"
                                android:backgroundTint="@color/bottom_line1"/>

                            <TextView
                                android:id="@+id/txt_amtinword"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/colorPrimary"
                                android:textSize="13dp"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                app:cardBackgroundColor="@color/bg_transfer"
                app:cardCornerRadius="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_light_grey"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtvremark"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="7dp"
                            android:textColor="#00C6FF"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="Remark : "/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical">
                            <EditText
                                android:id="@+id/message"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/input_border"
                                android:drawableTint="@color/input_border"
                                android:gravity="start"
                                android:inputType="text"
                                android:padding="5dp" />

                            <!--                android:background="@drawable/custom_edt_txt_account_border"-->





                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                app:cardBackgroundColor="@color/bg_transfer"
                app:cardCornerRadius="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_light_grey"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtvMPIN"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="7dp"
                            android:textColor="#00C6FF"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="MPIN : "/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical">
                            <EditText
                                android:id="@+id/etxt_mpin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/input_border"
                                android:drawableTint="@color/input_border"
                                android:gravity="start"
                                android:maxLength="5"
                                android:inputType="number"
                                android:padding="5dp" />


                            <Button
                                android:id="@+id/btn_forgot_mpin"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_gravity="right"
                                android:paddingRight="5dp"
                                android:backgroundTint="@color/color_activity_transparent"
                                android:gravity="center"
                                android:text="Forgot Mpin"
                                android:textAllCaps="false"
                                android:textStyle="bold"
                                android:textColor="@color/redDark"/>




                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_clear"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/but_ronded1"
                        android:text="Reset"
                        android:textColor="@color/white" />


                    <Button
                        android:id="@+id/btn_submit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/but_rounded2"
                        android:text="PAY"
                        android:textColor="@color/white" />
                </LinearLayout>




        </LinearLayout>
    </ScrollView>

</LinearLayout>
