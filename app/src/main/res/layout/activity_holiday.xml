<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:background="@color/colorPrimary"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight=".2"
                android:src="@drawable/arrow_left_icon"
                app:tint="@color/white" />
            <TextView
                android:id="@+id/tv_header"
                android:layout_width="0dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="Holiday List"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imgHome"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight=".2"
                android:tint="@color/white"
                android:padding="5dp"
                android:src="@drawable/ic_home" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg3"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:layout_marginTop="2dp"
                        android:paddingLeft="10dp"
                        android:text="Select Branch"
                        android:textColor="@color/colorPrimaryExtraDark"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/spnBranch"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:backgroundTint="@color/blue"
                                android:gravity="start"
                                android:popupBackground="#cccccc"
                                android:spinnerMode="dialog" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>


            </RelativeLayout>
          <!--  <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="2dp"
                app:cardElevation="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:cardUseCompatPadding="true"
                android:visibility="visible">

                <Spinner
                    android:id="@+id/spnBranch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:theme="@style/Spinner"
                    android:popupBackground="#cccccc"
                    android:background="@color/white"
                    android:spinnerMode="dialog"/>

            </androidx.cardview.widget.CardView>
-->

            <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="2dp"
                app:cardElevation="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:cardUseCompatPadding="true"
                android:visibility="gone">

                <AutoCompleteTextView
                    android:id="@+id/act_account"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:dropDownHeight="wrap_content"
                    android:text=""
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="Select Branch"
                    android:padding="5dp"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:drawableRight="@drawable/arrow_down"
                    android:drawablePadding="5dp"
                    android:background="@drawable/corner_round_white"/>

            </androidx.cardview.widget.CardView>


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="4dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:visibility="gone"
                android:paddingTop="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:gravity="start"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtLastUpdatedAt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:gravity="start"
                    android:padding="5dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:ignore="RelativeOverlap" />

            </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/linCalender"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:backgroundTint="@color/colorButton1.3"
                android:background="@drawable/bg_select"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgCalender"
                    android:layout_width="40dp"
                    android:src="@drawable/ic_calender"
                    android:padding="10dp"
                    android:layout_height="40dp"
                    app:tint="@color/white" />
                <TextView
                    android:layout_width="80dp"
                    android:padding="10dp"
                    android:visibility="gone"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    android:text="Calender"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linList"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/bg_select"
                android:backgroundTint="@color/colorAccent"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgList"
                    android:layout_width="40dp"
                    android:src="@drawable/baseline_view_list_24"
                    app:tint="@color/black"
                    android:padding="10dp"
                    android:layout_height="40dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:padding="10dp"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:text="List"/>
            </LinearLayout>

        </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ExpandableListView
                    android:id="@+id/listViewDateAccountDetails"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:background="#CCCCCC"
                    android:childDivider="@android:color/white"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="0dp"
                    android:visibility="gone"
                    android:paddingBottom="12dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_holiday"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="8dp"
                    android:visibility="gone"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="10dp" />
                <LinearLayout
                    android:id="@+id/linCalenderMain"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                <com.applandeo.materialcalendarview.CalendarView
                    android:id="@+id/calendarView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:headerColor="@color/colorPrimary"
                    app:selectionColor="@color/blue_variant2"
                    app:selectionLabelColor="@color/teal_200"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="8dp"
                    android:visibility="visible"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="10dp" />
                    <TextView
                        android:id="@+id/txtReason"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:textSize="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/empty_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:textColor="@color/blue"
                    android:textSize="16sp"
                    />
            </RelativeLayout>
        </LinearLayout>
</LinearLayout>
