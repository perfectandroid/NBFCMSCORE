                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:padding="5dp"
                            app:cardBackgroundColor="@color/bg_transfer"
                            app:cardCornerRadius="5dp">
                            <LinearLayout
                                android:id="@+id/rltv_consumername"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_light_grey"
                                android:orientation="vertical"
                                android:padding="2dp">

                                <TextView
                                    android:id="@+id/txtconsumername"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/input_border"
                                    android:layout_marginLeft="5dp"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:text="Consumer name"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/tie_consumername"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="@color/input_border"
                                        android:drawableTint="@color/input_border"
                                        android:hint=""
                                        android:inputType="text"
                                        android:textColorHint="@color/colorPrimarylight" />


                                </LinearLayout>




                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"                        android:padding="5dp"
                            app:cardBackgroundColor="@color/bg_transfer"
                            app:cardCornerRadius="5dp">
                            <LinearLayout
                                android:id="@+id/rltv_mobile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_light_grey"
                                android:orientation="vertical"
                                android:padding="2dp">

                                <TextView
                                    android:id="@+id/txtmobilenumber"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/input_border"
                                    android:layout_marginLeft="5dp"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:text="Mobile number"/>


                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/tie_mobilenumber"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/input_border"
                                    android:drawableTint="@color/input_border"
                                    android:hint=""
                                    android:inputType="number"
                                    android:textColorHint="@color/colorPrimarylight" />


                                <LinearLayout
                                    android:id="@+id/ll_contact"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_alignParentRight="true"
                                    android:gravity="center"
                                    android:visibility="gone">

                                    <ImageView
                                        android:id="@+id/im_contact"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:backgroundTint="@color/colorPrimarylight"
                                        android:src="@drawable/im_contacts" />

                                </LinearLayout>


                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:padding="5dp"
                            app:cardBackgroundColor="@color/bg_transfer"
                            app:cardCornerRadius="5dp">
                            <LinearLayout
                                android:id="@+id/rltv_consumerno"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_light_grey"
                                android:orientation="vertical"
                                android:padding="2dp">

                                <TextView
                                    android:id="@+id/txtconsumerno"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/input_border"
                                    android:layout_marginLeft="5dp"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:text="Consumer number"/>


                                <!--                            <com.google.android.material.textfield.TextInputLayout-->
                                <!--                                android:id="@+id/til_consumerno"-->
                                <!--                                android:layout_width="match_parent"-->
                                <!--                                android:layout_height="wrap_content"-->
                                <!--                                android:background="@android:color/transparent"-->
                                <!--                                android:backgroundTint="@color/input_border"-->
                                <!--                                android:textColorHint="@color/colorPrimarylight"-->
                                <!--                                app:hintTextColor="@color/colorPrimarylight">-->

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/tie_consumerno"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/input_border"
                                    android:drawableTint="@color/input_border"
                                    android:hint=""
                                    android:inputType="number"
                                    android:textColorHint="@color/colorPrimarylight" />

                                <!--                            </com.google.android.material.textfield.TextInputLayout>-->


                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:padding="5dp"
                            app:cardBackgroundColor="@color/bg_transfer"
                            app:cardCornerRadius="5dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_light_grey"
                                android:orientation="vertical"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/txtsectionname"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text="Section name"
                                    android:textColor="@color/input_border"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                                <RelativeLayout
