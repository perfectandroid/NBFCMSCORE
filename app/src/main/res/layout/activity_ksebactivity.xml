<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.KSEBActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">

        <RelativeLayout
            android:id="@+id/rltv_header"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3.5"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/im_back"
                        android:layout_width="35dp"
                        android:layout_height="25dp"
                        android:src="@drawable/arrow_left_icon"
                        app:tint="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_header"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textSize="18dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/white"
                        android:text="KSEB" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3.5"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/im_home"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_home"
                        app:tint="@color/white" />

                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/rltv_header">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/ll_button">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingTop="10dp"
                        android:paddingBottom="20dp">

                        <RelativeLayout
                            android:id="@+id/rltv_consumername"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/bg_light_grey"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtconsumername"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:gravity="start"
                                    android:text="Consumer Name"
                                    android:textColor="@color/colorPrimaryExtraDark"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:src="@drawable/input_user"
                                        android:layout_marginLeft="5dp"
                                        app:tint="@color/colorPrimaryExtraDark" />

                                    <EditText
                                        android:id="@+id/tie_consumername"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:backgroundTint="@color/transparent"
                                        android:maxLength="13"
                                        android:hint="Consumer Name"
                                        android:inputType="text"
                                        android:textColor="@color/colorAccent"
                                        android:textColorHint="@color/text_secondary"
                                        android:textSize="15dp" />


                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/rltv_mobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/bg_light_grey"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtmobilenumber"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:gravity="start"
                                    android:text="Mobile Number"
                                    android:textColor="@color/colorPrimaryExtraDark"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:src="@drawable/input_mobile"
                                        android:layout_marginLeft="5dp"
                                        app:tint="@color/colorPrimaryExtraDark" />

                                    <EditText
                                        android:id="@+id/tie_mobilenumber"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:backgroundTint="@color/transparent"
                                        android:maxLength="13"
                                        android:hint="Mobile Number"
                                        android:inputType="phone"
                                        android:textColor="@color/colorAccent"
                                        android:textColorHint="@color/text_secondary"
                                        android:textSize="15dp" />


                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rltv_consumerno"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/bg_light_grey"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtconsumerno"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:gravity="start"
                                    android:text="Consumer Number"
                                    android:textColor="@color/colorPrimaryExtraDark"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:src="@drawable/input_user"
                                        android:layout_marginLeft="5dp"
                                        app:tint="@color/colorPrimaryExtraDark" />

                                    <EditText
                                        android:id="@+id/tie_consumerno"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:backgroundTint="@color/transparent"
                                        android:maxLength="13"
                                        android:hint="Consumer Number"
                                        android:inputType="number"
                                        android:textColor="@color/colorAccent"
                                        android:textColorHint="@color/text_secondary"
                                        android:textSize="15dp" />


                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/bg_light_grey"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtsectionname"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:gravity="start"
                                    android:text="Section Name"
                                    android:textColor="@color/colorPrimaryExtraDark"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="-5dp"
                                    android:layout_marginRight="5dp">

                                    <LinearLayout
                                        android:id="@+id/linearLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:layout_marginLeft="5dp"
                                            android:src="@drawable/input_electric_tower"
                                            app:tint="@color/colorPrimaryExtraDark" />

                                        <EditText
                                            android:id="@+id/tie_sectionname"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="5dp"
                                            android:backgroundTint="@color/transparent"
                                            android:hint="Section Name"
                                            android:inputType="phone"
                                            android:maxLength="13"
                                            android:textColor="@color/colorAccent"
                                            android:textColorHint="@color/text_secondary"
                                            android:textSize="15dp" />


                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="right"
                                        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
                                        app:layout_constraintTop_toTopOf="@+id/linearLayout">

                                        <LinearLayout
                                            android:id="@+id/ll_sectionname"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_alignParentRight="true"
                                            android:gravity="center">

                                            <ImageView
                                                android:id="@+id/im_sectionname"
                                                android:layout_width="20dp"
                                                android:layout_height="20dp"
                                                android:src="@drawable/vector_right_arrow"
                                                app:tint="@color/colorPrimary" />

                                        </LinearLayout>
                                    </LinearLayout>
                                </androidx.constraintlayout.widget.ConstraintLayout>
                            </LinearLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/rltv_billno"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/bg_light_grey"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtbillno"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:gravity="start"
                                    android:text="Bill Number"
                                    android:textColor="@color/colorPrimaryExtraDark"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:src="@drawable/input_share"
                                        android:layout_marginLeft="5dp"
                                        app:tint="@color/colorPrimaryExtraDark" />

                                    <EditText
                                        android:id="@+id/tie_billno"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:backgroundTint="@color/transparent"
                                        android:maxLength="13"
                                        android:hint="Bill Number"
                                        android:inputType="number"
                                        android:textColor="@color/colorAccent"
                                        android:textColorHint="@color/text_secondary"
                                        android:textSize="15dp" />


                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/rltv_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/bg_light_grey"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtamount"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:gravity="start"
                                    android:text="Amount"
                                    android:textColor="@color/colorPrimaryExtraDark"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:src="@drawable/input_rupees"
                                        android:layout_marginLeft="5dp"
                                        app:tint="@color/colorPrimaryExtraDark" />

                                    <EditText
                                        android:id="@+id/tie_amount"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:backgroundTint="@color/transparent"
                                        android:maxLength="13"
                                        android:hint="Amount"
                                        android:inputType="number"
                                        android:textColor="@color/colorAccent"
                                        android:textColorHint="@color/text_secondary"
                                        android:textSize="15dp" />


                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/card_circleAccNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/bg_light_grey"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtaccount"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:gravity="start"
                                    android:text="Account No"
                                    android:textColor="@color/colorPrimaryExtraDark"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:src="@drawable/input_bank"
                                        android:layout_marginLeft="5dp"
                                        app:tint="@color/colorPrimaryExtraDark" />

                                    <EditText
                                        android:id="@+id/tie_account"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:backgroundTint="@color/transparent"
                                        android:hint="Account No"
                                        android:focusableInTouchMode="false"
                                        android:editable="false"
                                        android:inputType="number"
                                        android:maxLength="13"
                                        android:textColorHint="@color/text_secondary"
                                        android:textSize="15dp" />


                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/but_clear"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginRight="6dp"
                                android:layout_weight="1"
                                android:background="@drawable/bg_button"
                                android:backgroundTint="@color/white"
                                android:textColor="@color/colorPrimaryExtraDark"
                                android:text="Reset"
                                android:textStyle="bold" />


                            <Button
                                android:id="@+id/but_recharge"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_weight="1"
                                android:backgroundTint="@color/colorExtraLight"
                                android:background="@drawable/bg_button"
                                android:textColor="@color/colorPrimaryExtraDark"
                                android:text="Calculate"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>


                </ScrollView>




