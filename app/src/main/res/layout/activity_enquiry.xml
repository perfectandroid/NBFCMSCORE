<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight=".2"
                    android:src="@drawable/navback" />
                <TextView
                    android:id="@+id/tv_mycart"
                    android:layout_width="0dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:text="Enquiry"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />


                <ImageView
                    android:id="@+id/imgHome"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight=".2"
                    android:padding="5dp"
                    android:src="@drawable/ic_home" />

            </LinearLayout>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imfeedbacklogo"
                    android:layout_width="250dp"
                    android:layout_height="150dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_horizontal"/>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"                        android:padding="5dp"
                                app:cardBackgroundColor="@color/bg_transfer"
                                app:cardCornerRadius="5dp">
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bg_light_grey"
                                    android:orientation="vertical"
                                    android:padding="5dp">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/txtv_type"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="start"
                                            android:layout_marginTop="2dp"
                                            android:paddingLeft="10dp"
                                            android:text="Enquiry Type : "
                                            android:textColor="@color/bottom_line1"
                                            android:textSize="15sp"
                                            android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp" >
                    <Spinner
                        android:id="@+id/spn_feedbk"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:dropDownWidth="match_parent"
                        android:spinnerMode="dropdown">

                    </Spinner>
                </LinearLayout>
                                    </LinearLayout>
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    app:cardBackgroundColor="@color/bg_transfer"
                    app:cardCornerRadius="5dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_light_grey"
                        android:orientation="vertical"
                        android:padding="5dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:layout_marginTop="2dp"
                                android:paddingLeft="10dp"
                                android:text="Feedback : "
                                android:textColor="@color/bottom_line1"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/feedbackText"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:drawablePadding="10dp"
                                    android:textStyle="bold"
                                    android:textSize="15dp"
                                    android:lines="3"
                                    android:backgroundTint="@color/bottom_line1"/>


                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


                <RadioButton
                    android:id="@+id/rad_callbk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/bottom_line1"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/bottom_line1"
                    android:text="Executive Call Back"
                    />

            <LinearLayout
                android:id="@+id/llmob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    app:cardBackgroundColor="@color/bg_transfer"
                    app:cardCornerRadius="5dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_light_grey"
                        android:orientation="vertical"
                        android:padding="5dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:layout_marginTop="2dp"
                                android:paddingLeft="10dp"
                                android:text="Mobile Number : "
                                android:textColor="@color/bottom_line1"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/etxtmob"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:drawablePadding="10dp"
                                    android:textStyle="bold"
                                    android:visibility="visible"
                                    android:textSize="15dp"
                                    android:inputType="number"
                                    android:maxLength="10"
                                    android:lines="1"
                                    android:backgroundTint="@color/bottom_line1"/>


                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lltimeinterval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    app:cardBackgroundColor="@color/bg_transfer"
                    app:cardCornerRadius="5dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_light_grey"
                        android:orientation="vertical"
                        android:padding="5dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtv_time"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:layout_marginTop="2dp"
                                android:paddingLeft="10dp"
                                android:text="Time Interval : "
                                android:textColor="@color/bottom_line1"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp" >
                                <Spinner
                                    android:id="@+id/spn_time"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:visibility="visible"
                                    android:dropDownWidth="match_parent"
                                    android:spinnerMode="dropdown">

                                </Spinner>
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lltime"
                    android:layout_margin="10dp"
                    android:visibility="gone"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/etxt_tmfrm"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="start"
                        android:inputType="textEmailAddress"
                        android:textSize="15dp"
                        android:hint="From"
                        android:textColor="@color/black"
                        android:layout_weight="1.5"
                        android:drawablePadding="10dp"
                        android:drawableLeft="@drawable/time"
                        android:padding="5dp"
                        android:layout_marginLeft="3dp"
                        android:lines="2"
                        />

                    <TextView
                        android:id="@+id/etxt_tmto"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="start"
                        android:inputType="textEmailAddress"
                        android:textSize="15dp"
                        android:drawablePadding="15dp"
                        android:drawableLeft="@drawable/time"
                        android:hint="To"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:layout_marginRight="10dp"
                        android:lines="2"
                        />
                </LinearLayout>

            <LinearLayout
                android:id="@+id/llemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    app:cardBackgroundColor="@color/bg_transfer"
                    app:cardCornerRadius="5dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_light_grey"
                        android:orientation="vertical"
                        android:padding="5dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:layout_marginTop="2dp"
                                android:paddingLeft="10dp"
                                android:text="Email : "
                                android:textColor="@color/bottom_line1"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/etxtemail"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:drawablePadding="10dp"
                                    android:textStyle="bold"
                                    android:visibility="visible"
                                    android:textSize="15dp"
                                    android:inputType="textEmailAddress"
                                    android:lines="1"
                                    android:backgroundTint="@color/bottom_line1"/>


                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
                <!--<EditText
                    android:id="@+id/etxtemail"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="start"
                    android:inputType="textEmailAddress"
                    android:textSize="15dp"
                    android:hint="Email"
                    android:visibility="visible"
                    android:background="@drawable/etbackgroung1"
                    android:padding="5dp"
                    android:layout_margin="10dp"
                    android:lines="2"
                    />-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_clear"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/but_ronded1"
                        android:text="Reset"
                        android:textColor="@color/white" />


                    <Button
                        android:id="@+id/btn_submit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/but_rounded2"
                        android:text="Submit"
                        android:textColor="@color/white" />
                </LinearLayout>




            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>