<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:tint="@color/colorPrimaryExtraDark"
            android:src="@drawable/arrow_left_icon">

        </ImageView>

    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/frame_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/screen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:text="Nihal Pavithran"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="250dp"
                    android:visibility="visible"
                    android:layout_height="250dp" />
<!--                <com.airbnb.lottie.LottieAnimationView-->
<!--                    android:id="@+id/animationView"-->
<!--                    android:layout_width="250dp"-->
<!--                    android:padding="80dp"-->
<!--                    android:layout_height="250dp"-->
<!--                    app:lottie_rawRes="@raw/loading"-->
<!--                    app:lottie_autoPlay="true"-->
<!--                    app:lottie_loop="true"/>-->

                <TextView
                    android:id="@+id/upi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="UPI ID:nihalnihapavithran@okhdfcbank"
                    android:textColor="@color/black"
                    android:textSize="12dp" />


            </LinearLayout>
        </FrameLayout>
        <TextView
            android:id="@+id/shareUpi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="Share this UPI"
            android:textColor="@color/black"
            android:textSize="14dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/white"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryExtraDark"
                android:textStyle="bold"
                android:background="@drawable/bg_button"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:enabled="false"
                android:paddingBottom="10dp"
                android:text="Share"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/colorExtraLight"
                android:textColor="@color/colorPrimaryExtraDark"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:background="@drawable/bg_button"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:enabled="false"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:text="Download"
                android:textSize="15dp" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>