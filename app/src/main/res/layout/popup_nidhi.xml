<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:padding="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/idImgV1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:contentDescription="TODO"
            android:paddingStart="15dp"
            android:paddingLeft="15dp"
            android:src="@drawable/otp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idImgV1"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="Please Enter Nidhi Code"
            android:textColor="@color/colorPrimaryExtraDark"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txt_failed_attempt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtHead"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/red_error_snack_bar"
            android:visibility="gone" />

        <TextView

            android:id="@+id/txtOtp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_failed_attempt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:gravity="center_horizontal"
            android:text=""
            android:textColor="#959697"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="gone" />


        <Button
            android:id="@+id/btn_resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/btn_submit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:text="Resend"
            android:textAllCaps="false"
            android:textColor="#297cca"
            android:textStyle="bold"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/btn_resend"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etxt_nidhicode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@null"
                android:hint="Enter Code"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryExtraDark"
                android:inputType="text"
                android:maxLength="6"
                android:textSize="26dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/text_primary" />
        </LinearLayout>
        <TextView
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="30dp"
            android:backgroundTint="@color/colorPrimaryExtraDark"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:layout_marginTop="25dp"
            android:paddingBottom="10dp"
            android:text="Confirm"
            android:background="@drawable/btn_bg"
            android:textColor="@color/white"
            android:textSize="18dp" />
    </LinearLayout>


</RelativeLayout>