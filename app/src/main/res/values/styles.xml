<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.StatusBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/colorViolet</item>
    </style>

    <style name="Progress" parent="android:Theme.Holo.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@color/color_activity_transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="CustomAlertDialogStyle">MyDialogTheme
        <item name="android:bottomBright">@color/color_activity_transparent</item>
        <item name="android:bottomDark">@color/color_activity_transparent</item>
        <item name="android:bottomMedium">@color/color_activity_transparent</item>
        <item name="android:centerBright">@color/color_activity_transparent</item>
        <item name="android:centerDark">@color/color_activity_transparent</item>
        <item name="android:centerMedium">@color/color_activity_transparent</item>
        <item name="android:fullBright">@color/color_activity_transparent</item>
        <item name="android:fullDark">@color/color_activity_transparent</item>
        <item name="android:topBright">@color/color_activity_transparent</item>
        <item name="android:topDark">@color/color_activity_transparent</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/white</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#7E1212</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#124D08
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#124D08
        </item>
    </style>
    <style name="Spinner" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
